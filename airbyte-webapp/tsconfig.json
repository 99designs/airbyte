{
    "compilerOptions": {
        "target": "esnext",
        "strictNullChecks": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "lib": ["es2019", "dom"],
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/*"],
            "locales/*": ["src/locales/*"],
            "packages/*": ["src/packages/*"],
            "pages/*": ["src/pages/*"],
            "types/*": ["src/types/*"],
            "utils/*": ["src/utils/*"],
            "views/*": ["src/views/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules",
      "build"
    ]
}
